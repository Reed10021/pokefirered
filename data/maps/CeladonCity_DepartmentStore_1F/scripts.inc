CeladonCity_DepartmentStore_1F_EventScript_LotteryClerk:: @ 821F69C
	goto_if_questlog EventScript_ReleaseEnd
	special QuestLog_CutRecording
	lock
	faceplayer
	dotimebasedevents
	compare VAR_POKELOT_PRIZE_ITEM, ITEM_NONE
	goto_if_ne CeladonCity_DepartmentStore_1F_EventScript_GivePrizeFromEarlier
	goto_if_set FLAG_DAILY_PICKED_LOTO_TICKET, CeladonCity_DepartmentStore_1F_EventScript_ComeBackTomorrow
	msgbox CeladonCity_DepartmentStore_1F_Text_LotteryCornerDrawTicket, MSGBOX_YESNO
	compare VAR_RESULT, NO
	goto_if_eq CeladonCity_DepartmentStore_1F_EventScript_PleaseVisitAgain
	setflag FLAG_DAILY_PICKED_LOTO_TICKET
	message CeladonCity_DepartmentStore_1F_Text_PleasePickTicket
	waitmessage
	special RetrieveLotteryNumber
	copyvar VAR_0x8008, VAR_RESULT
	special BufferLottoTicketNumber
	msgbox CeladonCity_DepartmentStore_1F_Text_TicketNumberIsXPleaseWait, MSGBOX_DEFAULT
	special PickLotteryCornerTicket
	delay 100
	compare VAR_0x8004, 0
	goto_if_eq CeladonCity_DepartmentStore_1F_EventScript_NoMatch
	incrementgamestat GAME_STAT_WON_POKEMON_LOTTERY
	compare VAR_0x8006, 0
	call_if_eq CeladonCity_DepartmentStore_1F_EventScript_TicketMatchPartyMon
	compare VAR_0x8006, 1
	call_if_eq CeladonCity_DepartmentStore_1F_EventScript_TicketMatchPCMon
	bufferitemname 0, VAR_0x8005
	compare VAR_0x8004, 1
	call_if_eq CeladonCity_DepartmentStore_1F_EventScript_OneDigitMatch
	compare VAR_0x8004, 2
	call_if_eq CeladonCity_DepartmentStore_1F_EventScript_TwoDigitMatch
	compare VAR_0x8004, 3
	call_if_eq CeladonCity_DepartmentStore_1F_EventScript_ThreeDigitMatch
	compare VAR_0x8004, 4
	call_if_eq CeladonCity_DepartmentStore_1F_EventScript_FourDigitMatch
	compare VAR_0x8004, 5
	call_if_eq CeladonCity_DepartmentStore_1F_EventScript_FullMatch
	giveitem VAR_0x8005, VAR_0x800A
	compare VAR_RESULT, FALSE
	goto_if_eq CeladonCity_DepartmentStore_1F_EventScript_RecordPrizeNoRoom
	goto CeladonCity_DepartmentStore_1F_EventScript_PleaseVisitAgain2
	end

